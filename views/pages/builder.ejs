<!DOCTYPE html>
<html lang="en">
  <%- include ../partials/head %>
<body>
      <%- include ../partials/nav %>
    <!-- DROPDOWN -->
    <div class='dropdown'>
      <form method="POST" action="/builder/cards">
        <select name="class">
          <option value="Neutral">Neutral</option>
          <option value="Druid">Druid</option>
          <option value="Hunter">Hunter</option>
          <option value="Mage">Mage</option>
          <option value="Paladin">Paladin</option>
          <option value="Priest">Priest</option>
          <option value="Rogue">Rogue</option>
          <option value="Shaman">Shaman</option>
          <option value="Warlock">Warlock</option>
          <option value="Warrior">Warrior</option>
        </select>
        <input type="submit">
      </form>
    </div>


    <!-- CARDS AND HIDDEN FORMS -->
  <main class="builder-main">
    <div class='cards'>
        <% if(data) { %>
          <% data.forEach(card => { %>
          <img class='cards'src="<%= card.img %>">         
          <!-- <button form="<%= card.name %>" type="submit" value="submit"></button> -->
          <!-- <img class='save-button'src="/images/save.png" alt=""> -->
          <form id="<%= card.name %>" method="POST" action="/builder/cards" class="hidden">
            <input type="text" name="name" value="<%= card.name %>">
            <input type="text" name="type" value="<%= card.type %>">
            <input type="text" name="class" value="<%= card.class %>">
            <input type="text" name="cost" value="<%= card.cost %>">
            <input type="text" name="img" value="<%= card.img %>">
            <input type="text" name="rarity" value="<%= card.rarity %>">
          </form>

          <% }) %>
        <% } else { %>
          <p>please select a class to display cards</p>
        <% } %>
    </div>
  </main>
    <!-- <%- include ../partials/footer %> -->
</body>
</html>
